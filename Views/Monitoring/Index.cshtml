<!-- START PAGE CONTENT-->
<div class="page-content fade-in-up">

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index","Monitoring")">Zone1(40th Street)</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Zone2")">Zone2(39th Street)</a>
