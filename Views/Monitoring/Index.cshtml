<script>
    var mqtt;
    var reconnectTimeout = 2000;
    var host = "stellar-carpenter.cloudmqtt.com";
    var port = 443;
    var occupied;
    var vacant;
    var vehicleinLine;
    var totalSlots;
    var vinLine;

    function MQTTconnect() {
        mqtt = new Paho.MQTT.Client(host, port, "clientId");
        console.log("Connecting to" + host + ":" + port);
        var options = {
            useSSL: true,
            userName: "ukupubcf",
            password: "BEwuo9N5FUfi",
            timeout: 3,
            onSuccess: onConnect,
            onFailure: onFailure,
        };
        mqtt.connect(options);
    }
    function onConnect() {
        console.log("connected");
        Availability();
        VehicleInLane();
        Vehicleapproach();
        //message = new Paho.MQTT.Message("Connected");
        //message.destinationName = "vehicle_likely_to_park/1";
        //mqtt.send(message);
    }
    function onFailure(message) {
        console.log("Connection " + port + "failed!");
        setTimeout(MQTTconnect, reconnectTimeout);
    }
    function onMessageArrived(message) {
        console.log(message);
        if (message.destinationName == "vehicle_approaching/1") {
            approach = message.payloadString;
            var  zoneParkList = JSON.parse("[" + approach + "]");
            console.log("approach" + approach);
            InitializeVehicleApproachDatatable(zoneParkList);           
        }
        if (message.destinationName == "vehicle_likely_to_park/1") {
            parking = message.payloadString;
            var parkingInZone = JSON.parse(parking);
            console.log("parking" + parkingInZone);
            InitializeVehicleParkingDatatable(parkingInZone);
        }
        if (message.destinationName == "vehicle_leaving/1") {
            leaving = message.payloadString;
            var leavingInZone = JSON.parse("[" + leaving + "]");
            console.log("leaving");
            console.log(leavingInZone);
            InitializeVehicleLeavingDatatable(leavingInZone);
        }
        if (message.destinationName == "parking_availability/1") {
            availability = message.payloadString;
            var availabilityInZone = JSON.parse(availability);
            occupied = availabilityInZone.occupied;
            vacant = availabilityInZone.freeSlots;
            totalSlots = availabilityInZone.slots;
            $("#occupiedId").html(occupied);
            $("#vacantId").html(vacant);
            $("#slotList").html(totalSlots);
            console.log("availability" + availabilityInZone);
        }
        if (message.destinationName == "vehicles_in_lane/1") {
            vehicleInLane = message.payloadString;
            var vehicle = JSON.parse(vehicleInLane);
            vinLine = vehicle.count;
            $("#vinLaneId").html(vinLine);
        }

        //var list = Object.keys(zoneParkList).length;
    }
    function InitializeVehicleApproachDatatable(data) {
        $("#vehicle").DataTable({
            "ordering": false,
            data: data,
            destroy: true,
            dataSrc: "",
            "columns": [
                { "data": "Time" },
                { "data": "PlateNumber" },
                { "data": "SnapShot", render: getImg }
            ]
        });
    }
    function InitializeVehicleParkingDatatable(data) {
        $("#parking").DataTable({           
            "ordering": false,
            data: data,
            destroy: true,
            dataSrc: "",
            "columns": [
                { "data": "InTime" },
                { "data": "PlateNumber" },
                { "data": "InSnapShot", render: getImg }
            ]
        });
    }
    function InitializeVehicleLeavingDatatable(data) {
        $("#leaving").DataTable({
            "ordering": false,
            data: data,
            destroy: true,
            dataSrc: "",
            "columns": [
                { "data": "InTime" },
                { "data": "PlateNumber" },
                { "data": "OutTime" },
                { "data": "InSnapShot", render: getImg },
                { "data": "OutSnapShot", render: getImg }
            ]
        });
    }

    function getImg(data, type, full, meta) {
        var snap = data;
        return '<img src="data:image/png;base64,' + snap + '" style="width:50px; height:50px;"/>';
    }
    function Vehicleapproach() {
        mqtt.subscribe("vehicle_approaching/1");
        mqtt.onMessageArrived = onMessageArrived
    }
    function Parking() {
        mqtt.subscribe("vehicle_likely_to_park/1");
        mqtt.onMessageArrived = onMessageArrived
    }
    function Leaving() {
        mqtt.subscribe("vehicle_leaving/1");
        mqtt.onMessageArrived = onMessageArrived
    }
    function Availability() {
        mqtt.subscribe("parking_availability/1");
        mqtt.onMessageArrived = onMessageArrived
    }
    function VehicleInLane() {
        mqtt.subscribe("vehicles_in_lane/1");
        mqtt.onMessageArrived = onMessageArrived
    }
    function Save() {
        var freeSlots = $("#freeSlotId").val();
        var mqttMsg = "{ \"parkingID\":" + 1 +
            " , \"freeSlots\":" + freeSlots + " }";
        mqtt.send("freeSlots_in_lane/1", mqttMsg);
    }  
    function SaveTime() {
        var graceTime = $("#graceTimeId").val();
        var maxTime = $("#maxTimeId").val();
        var mqttMsg = "{ \"parkingID\":" + 1 +
            " , \"graceTime\":" + graceTime + ",\"maxTime\":" + maxTime + " }";
        mqtt.send("graceAndmaxTime_in_lane/1", mqttMsg);
        console.log("GraceAndMaxTime" + mqttMsg);
    } 
    function camera_reconnect() {
        var reg = new RegExp("[0-2]");
        var mqttMsg;
        var camCountInZone = $("#camCountInZone").val();
        if (reg.test(camCountInZone)) {
            mqttMsg = "{ \"parkingID\":" + 1 +
                " , \"camID\":" + camCountInZone +" }";
            mqtt.send("camera_reconnect/1", mqttMsg);
        }
        else {
            console.log("Please fill correct number(0 or 1 or 2)");
        }
        
    } 
    function zoneStatus() {
        var mqttMsg = "{ \"parkingID\":" + 1 +" }";
        mqtt.send("zone_status/1", mqttMsg);
        console.log("zoneStatus" + mqttMsg);
    }
    function SendAvailability() {
        var reg = new RegExp('[0-2]');
        var totalslot;
        var freeCount = $("#freecount").val();
        var zoneId = $("#zoneId").val();
        if (reg.test(zoneId)) {
            if (zoneId == 1) {
                totalslot = 72;
            } else if (zoneId == 2) {
                totalslot = 66;
            } else if (zoneId == 3) {
                totalslot = 126;
            }
            var occupied = totalslot - freeCount;
            var mqttMsg = "{ \"parkingID\":" + zoneId +
                " , \"slots\":" + totalslot +
                " , \"occupied\":" + occupied +
                " , \"freeSlots\":" + freeCount + " }";
            mqtt.send("parking_availability/" + zoneId + "", mqttMsg);
            console.log("parking_availability/" + zoneId + "", mqttMsg);
        } else {
            console.log("Please Fill Correct ZoneId");
        }
        
    }
</script>